 

func int main() /* Function def */ {
    int n = 10; /* Declaration */ 
    curve g(x) = x^2 + 1; /* Declaration */   
     

    curve f(x); /* Declaration */ 

    for i in 0..n { /* For loop */ 
        f += g(i) * x^i; /* Augmented Assignment */ 
    }

     
    real start = 0.0; /* Declaration */  
    real epsilon = 0.0001; /* Declaration */ 

    until ( abs(f(start)) < epsilon ) repeat /* Loop */ 
    {
        g = D[f, x]; /* Assignment */ 
        start = start - f(start)/g(start); /* Assignment */ 
    }

    print("One of the roots of the equation is ",start); /* Function Call */ 

    return 0; /* Return */ 
}